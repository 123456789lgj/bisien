<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/personalCenter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/text_press"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="修改密码"
        android:textColor="@color/fragment_my_textcolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="服务"
        android:textColor="@color/fragment_my_textcolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/versionInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="版本信息"
        android:textColor="@color/fragment_my_textcolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dropOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="退出"
        android:textColor="@color/fragment_my_textcolor"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_status_conditioning"
        android:layout_margin="20dp"
        android:layout_height="wrap_content" />

</LinearLayout>