<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#BCE0FD">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/person" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etIp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_location_ip"
            android:drawablePadding="20dp"
            android:hint="请输入IP地址"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#2699fb"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_ip"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@mipmap/ic_close" />
    </LinearLayout>
    <View
        android:layout_width="328dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/person_name"
            android:drawablePadding="20dp"
            android:hint="请输入您的账户"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#2699fb"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_clear_account"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:visibility="gone"
            android:src="@mipmap/ic_close" />
    </LinearLayout>

    <View
        android:layout_width="328dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/person_password"
            android:drawablePadding="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#2699fb"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@mipmap/ic_hide" />
    </LinearLayout>

    <View
        android:layout_width="328dp"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cbPassword"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="记住密码"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/cbPassword"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_toLeftOf="@+id/tvIp"
            android:layout_width="wrap_content"
            android:id="@+id/cbIp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="记住IP"
            android:id="@+id/tvIp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/select_login_btn_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@mipmap/login_bottom" />


</LinearLayout>