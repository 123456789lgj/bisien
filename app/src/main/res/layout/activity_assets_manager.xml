<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AssetsManagerActivity">

    <include
        layout="@layout/head_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tvAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="总空间42U"
        android:textColor="@color/text_press"
        android:textSize="20dp"
        android:textStyle="bold" />
    <com.bisien.dems.activity.widget.MyArcView
        android:layout_height="240dp"
        android:layout_width="240dp"
        android:id="@+id/myArcView"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="16dp"
            android:background="@drawable/shap_main_color_rect"
            android:layout_marginLeft="83dp"
            android:layout_height="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="已使用"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="@color/text_press"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="16dp"
            android:background="@drawable/shap_mid_rect"
            android:layout_marginLeft="96dp"
            android:layout_height="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="空闲"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:textColor="@color/text_press"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>