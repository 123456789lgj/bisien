<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="20dp"
            android:paddingRight="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="局站"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/measurePopupWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shap_dialog_content_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="全部"
                    android:textColor="#ccc"
                    android:textColorHint="#ccc"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/arrowDownStation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/ic_down_arrow_dialog" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="机房"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/tvHouseLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shap_dialog_content_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHouse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="全部"
                    android:textColor="#ccc"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/arrowDownHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@mipmap/ic_down_arrow_dialog" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="类别"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.bisien.dems.activity.widget.MyFlowLayout
                android:id="@+id/myFlowLayoutCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="设备"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.bisien.dems.activity.widget.MyFlowLayout
                android:id="@+id/myFlowLayoutDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="开始时间"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="请选择开始时间"
                android:textColor="@color/text_press"
                android:background="@drawable/shap_dialog_content_bg"
                android:textColorHint="#ccc"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="结束时间"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="请选择结束时间"
                android:background="@drawable/shap_dialog_content_bg"
                android:textColor="@color/text_press"
                android:textColorHint="#ccc"
                android:layout_marginBottom="10dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="重置"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:id="@+id/btReset"
            android:background="@color/mid_blue"
            android:layout_height="match_parent" />
        <Button
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/text_press"
            android:text="完成"
            android:textSize="14sp"
            android:id="@+id/btComplete"
            android:textColor="@color/black"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>